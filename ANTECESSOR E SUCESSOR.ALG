algoritmo "antecessor e sucessor"
var
   numero, antecessor, sucessor: real
inicio
      escreva("informe um numero ")
      leia(numero)
      antecessor <- numero - 1
      sucessor <- numero + 1
      escreval("o seu numero e ", numero)
      escreval("o antecessor e ", antecessor)
      escreval("o sucessor e ", sucessor)
fimalgoritmo